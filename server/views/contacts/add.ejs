<%- include ../partials/header.ejs %>


<%- include ../partials/main_nav.ejs %>

<!--Content for the Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter your Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="numberTextField">Phone Number</label>
                    <input type="text" class="form-control" id="numberTextField" placeholder="Enter your Phone Number" name="Number" required>
                </div>
                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control" id="emailTextField" placeholder="Enter your Email Address" name="Email" required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">Submit</button>
                <a href="/business-contacts" class="btn btn-warning">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>






